<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="680dp"
        android:background="@color/White"
        android:src="@drawable/ic_arrow_back_black_18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/topBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="610dp"
        android:background="@color/White"
        android:src="@drawable/ic_arrow_upward_black_18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="276dp"
        android:layout_marginLeft="276dp"
        android:layout_marginTop="680dp"
        android:background="@color/White"
        android:src="@drawable/ic_arrow_forward_black_18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bottomBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="780dp"
        android:background="@color/White"
        android:src="@drawable/ic_arrow_downward_black_18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/autoBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="430dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="630dp"
        android:background="@color/pink"
        android:text="AUTO"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manualBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="430dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="690dp"
        android:background="@color/pink"
        android:text="MANUAL"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="430dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="780dp"
        android:background="@color/pink"
        android:text="UPDATE"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="430dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="300dp"
        android:background="@color/colorAccent"
        android:text="WAY POINTS"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/coordBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="430dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="360dp"
        android:background="@color/colorAccent"
        android:text="COORDINATES"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exploreBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="430dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="420dp"
        android:background="@color/colorAccent"
        android:text="EXPLORE"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fastestBtn"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="430dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="480dp"
        android:background="@color/colorAccent"
        android:text="FASTEST"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="430dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="540dp"
        android:background="@color/colorAccent"
        android:text="RESET"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="MOVING..."
        android:textSize="@dimen/description_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/explText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="140dp"
        android:text="Exploration:"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/explTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="xxxx"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fastestTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:text="Fastest Path:"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fastestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:text="xxxx"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/mazeLayout"
        android:layout_height="@dimen/maze_width"
        android:layout_width="@dimen/maze_height"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.110"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></RelativeLayout>
</android.support.constraint.ConstraintLayout>
